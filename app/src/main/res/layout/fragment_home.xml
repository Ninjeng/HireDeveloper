<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/search_bar"
            android:layout_width="266dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/home_profile_image"
            android:background="@drawable/search_bar"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:ems="10"
            android:gravity="center"
            android:hint="Search Profile"
            android:textColorHint="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home_profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:layout_toRightOf="@+id/search_bar"
            android:background="@drawable/message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toEndOf="@+id/search_bar"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Latest"
        android:background="@drawable/horizontal_line"
        android:textSize="24dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeRecycleView"
        android:scrollbars="vertical"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressbarRecycleView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

</LinearLayout>